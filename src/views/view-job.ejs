  <% if(!locals.userEmail) { %>
  <div class="form_div">
    <div class="apply_div">
      <h3 class="apply_div_tlt">Apply</h3>
      <form action="/apply-job" method="post" enctype="multipart/form-data">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Name"
          class="apply_name"
        />
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          class="apply_name"
        />

        <input
          type="number"
          name="phNo"
          id="phNo"
          placeholder="Mobile Number"
          class="apply_name"
        />

        <label for="resume" class="resume">Resume (Only .pdf)</label>
        <input
          type="file"
          class="apply_name fileup"
          id="resume"
          name="resume"
          accept="application/pdf"
        />

        <button class="job_view_btn submit_resume">Submit</button>
