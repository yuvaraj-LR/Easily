<section class="job_desp_sp">
  <div class="job_desp_div">
    <div class="job_head">
      <h1 class="job_role">
        <span><%= job.position %></span>

        <% if(locals.userEmail) { %>
        <span class="job_role_btns">
          <span class="add_btn nav_list">
            <a href="/applicants">Number of Applicants</a>
          </span>

          <a href="/views/update-job/<%= job.job_id %>">
            <button class="job_edit_btn" type="submit">
              <i class="fa-solid fa-pencil"></i>
            </button>
          </a>

          <form action="/delete-job/<%= job.job_id %>" method="post">
            <button class="job_del_btn" type="submit">
              <i class="fa-solid fa-trash"></i>
            </button>
          </form>
        </span>
        <% } %>
      </h1>
      <h2 class="job_spec">
        <span class="job_company">
          <i class="fa-solid fa-briefcase"></i>
          <%= job.company_name %>
        </span>
        <span class="job_loc">
          <i class="fa-solid fa-location-dot"></i>
          <%= job.location %>
        </span>
      </h2>
      <h3 class="job_sal">
        <i class="fa-solid fa-indian-rupee-sign"></i>
        <span class="job_sal_st_sts_job"><%= job.salary_from %> - &nbsp;</span>

        <i class="fa-solid fa-indian-rupee-sign"></i>
